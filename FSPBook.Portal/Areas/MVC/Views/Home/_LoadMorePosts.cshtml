@using FSPBook.Core.Models
@model List<PostModel>
@{
    PostModel postModel = new PostModel();
    if(Model != null)
    {
        postModel = Model.FirstOrDefault();
    }
}
@if (Model.Count() > 0)
{
    @foreach (var post in Model)
    {
        <div class="post">
            <h3><a href="MVC/Profile/Index/@post.AuthorId">@post.AuthorName</a></h3>
            <p class="created-at" data-postid="@post.Id">@post.DateTimePosted.ToString("g")</p>
            <p>@post.Content</p>
        </div>
    }
}
else
{
    <div class="container text-center" style="padding: 20px;">
        <h5 class="text-muted">No More Posts Available</h5>
        <p class="text-secondary">You’ve reached the end of the content. Check back later for more updates.</p>
        <i class="fas fa-check-circle text-success" style="font-size: 2rem;"></i> <!-- Optional icon -->
        <input type="hidden" value="true" id="hdnLastPost" />
    </div>
}


